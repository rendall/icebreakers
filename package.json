    "jest": "^27.2.4",
    "markdownlint": "^0.23.1",
    "markdownlint-cli": "^0.28.1",
    "mini-css-extract-plugin": "^2.3.0",
    "node-fetch": "^2.6",
    "prettier": "^2.4.1",
    "rimraf": "^2.7.1",
    "sass": "^1.42.1",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.3.0",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.3",
